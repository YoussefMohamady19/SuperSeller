@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row p-6">
        <div class="col p-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col p-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Product
            </a>
        </div>
    </div>
    
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr class="table-active">
                <th>
                    Product Name
                </th>
                <th >
                    Product Price
                </th>
                <th>
                    Category
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Item item in Model)
            {
                <tr>
                    <td width="30%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td width="30%">
                        @item.Category.Name
                    </td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.id" class="btn btn-success">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

