@model Item

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="id" hidden />
    <div class="border p-3 mt-4">
        <div class="row p-2">
            <h2 class="text-primary">Delete Product</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" disabled asp-items="ViewBag.CategoryList">
            </select>
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Items" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To Items</a>
    </div>
</form>
